<!DOCTYPE html>
<html lang="en">
<head>
    <title>Restaurant Page</title>
    <link rel="stylesheet" href="../styles.css">
</head>

<body>

    <script src="scripts/header.js"></script>

    <div class="restaurants_viewr" id="restaurant-list">
        <% restaurants.forEach((restaurant, index) => { %>
            <div class="restaurants-card" id="restaurant-<%= index %>">
                <img src="<%= restaurant.photo %>" alt="<%= restaurant.name %>">
                <div class="text-box">
                    <h3><%= restaurant.name %></h3>
                    <div><%= restaurant.phone %></div>
                    <p><%= restaurant.address %></p>
                </div>
                <button class="delete-button" data-index="<%= index %>">X</button>
            </div>
        <% }); %>
    </div>
    <script type="module" src="/scripts/restaurantCards.js"></script>
    
</body>
</html>
